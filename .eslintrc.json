{
    "root": true,
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "plugins": [
        "eslint-plugin-standard"
    ],
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "import/no-unresolved": [
            0
        ],
        "no-console": [
            0
        ],
        "import/no-unassigned-import": 0,
        "eqeqeq": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            0
        ]
    }
}